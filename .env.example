# Breast Cancer Histopathology Analysis - Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection String
# Get from: https://www.mongodb.com/cloud/atlas (free tier available)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Vercel Blob Storage Token  
# Get from: https://vercel.com/dashboard -> Storage -> Blob -> Tokens
# Create a token with read/write permissions
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxx

# Port (optional, default 8000)
# Render will set this automatically
PORT=8000
